            <Button x:Name="button_Registruj" Content="Registruj se" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,10,10" Grid.Row="7" VerticalAlignment="Top" Command="{Binding RegistrujNovog}"/>

