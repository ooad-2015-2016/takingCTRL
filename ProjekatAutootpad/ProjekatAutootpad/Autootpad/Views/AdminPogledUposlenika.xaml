    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjekatAutootpad.Autootpad.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="100" Margin="520,130,-260,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Uposlenici" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="75" Margin="90,10,0,0" VerticalAlignment="Top" Width="175" RenderTransformOrigin="0.466,-0.35" BorderThickness="1"/>
        <Button x:Name="button1" Content="Dodaj" HorizontalAlignment="Left" Margin="90,200,0,0" VerticalAlignment="Top" Width="175" Height="30"/>
        <Button x:Name="button" Content="Izmijeni" HorizontalAlignment="Left" Margin="90,90,0,0" VerticalAlignment="Top" Width="175" Height="30" Click="button_Click" />
        <Button x:Name="button2" Content="Obriši" HorizontalAlignment="Left" Margin="90,130,0,0" VerticalAlignment="Top" Width="175"/>
        <Grid x:Name="grid1" HorizontalAlignment="Left" Height="270" Margin="34,295,0,0" VerticalAlignment="Top" Width="295" Visibility="Collapsed">
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Ime i prezime:" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="10,95,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="10,142,0,0" TextWrapping="Wrap" Text="Datum rođenja:" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock5" HorizontalAlignment="Left" Margin="10,190,0,0" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock6" HorizontalAlignment="Left" Margin="10,239,0,0" TextWrapping="Wrap" Text="E-mail:" VerticalAlignment="Top"/>
            <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="124,4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="161"/>
            <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="124,46,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="161"/>
            <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="124,90,0,0" VerticalAlignment="Top" Width="161"/>
            <DatePicker HorizontalAlignment="Left" Margin="124,136,-125,0" VerticalAlignment="Top" Width="151" Height="46"/>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="124,185,0,0" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="124,234,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="161"/>
        </Grid>

    </Grid>
</Page>
